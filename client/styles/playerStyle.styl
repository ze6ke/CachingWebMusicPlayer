
li
  list-style: none
  display: block
  border: 1px solid
  margin: 1px

.song-row
  white-space: nowrap
  overflow: hidden
  width: 100%

.song-title
  font-weight: bold

.song-title, .song-genre
  width: 50%
  overflow: hidden
  text-overflow: ellipsis
  display: inline-block

.song-artist, .song-album
  float: right
  overflow: hidden
  text-overflow: ellipsis
  width: 50%

ul
  list-style-type: none
  padding: 0

.header
  position: fixed
  top: 0
  width: 100%
  background-color: rgba(255,255,255,1)

.header-placeholder
  height: 100px

.filter-span
  white-space: nowrap
  display: inline-block

.filter-box
  border: 1px solid
  width: 170px
  padding-right: 18px

.filter-icon
  border: none
  position: relative
  left: -16px


.player
  display: inline-block
  transform: scale(1.2)
  margin-left: 22px

h1
  margin: .1em 0
