ul
  list-style-type: none
  padding: 0
  margin: 5px

li
  list-style: none
  display: block
  border: 1px solid
  margin-top: 0px
  margin-left: 0px
  margin-right: 0px
  white-space: nowrap


li:last-child
  margin-bottom: 5px

li:not(:last-child)
  margin-bottom: -1px

nav input[type="checkbox"]
  height: 0
  width: 0
  display: none
  border: 0

.hamburger-icon
  float: right
  font-family: FontAwesome
  font-size: 2em

nav input[type="checkbox"]:not(:checked) ~ ul /* menu when hidden */
  height: 0
  width: 0
  transition: width .5s, height .5s
  border: 0


nav input[type="checkbox"]:checked ~ ul /* menu when displayed */
  height: calc(3.1em + 6px)
  width: 150px
  transition: width .5s, height .5s

.menu
  background-color: #fff
  overflow: hidden
  position: fixed
  top: 2em
  right: 0%
  display: inline-block
  z-index: 10

.title-bar h1
  margin: .1em 0
  display: inline
  flex-shrink: 1
  overflow: hidden
  white-space: nowrap

.title-bar nav
  flex-shrink: 0
  padding-right: 12px

.title-bar
  display: flex
  flex-wrap: nowrap
  justify-content: space-between



.song-row
  white-space: nowrap
  display: flex
  flex-wrap: nowrap
  justify-content: space-between
  overflow: hidden

.song-title
  font-weight: bold

.song-title, .song-genre
  overflow: hidden
  text-overflow: ellipsis
  display: inline-block
  flex-shrink: 0
  margin-right: 1em
  padding-left: 2px


.song-artist, .song-album
  float: right
  overflow: hidden
  text-overflow: ellipsis
  flex-shrink: 10
  padding-right: 2px


.header
  position: fixed
  top: 0
  width: 100%
  background-color: rgba(255,255,255,1)

.header-placeholder
  height: 120px

.filter-span
  white-space: nowrap
  display: inline-block

.filter-box
  border: 1px solid
  width: 170px
  padding-right: 18px

.filter-icon
  border: none
  position: relative
  left: -16px


.player
  display: inline-block
  transform: scale(1.2)
  margin-left: 22px
  z-index: 0
